@model Projekt_befit.Models.DTO.ExerciseListCreateDto

@{
    ViewData["Title"] = "Dodaj ćwiczenie";
}

<h1>Dodaj ćwiczenie</h1>
<hr />

<div class="row">
    <div class="col-md-6">
        <form asp-action="Create" method="post">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group mb-3">
                <label asp-for="ExerciseNameId" class="control-label"></label>
                <select asp-for="ExerciseNameId" class="form-control" asp-items="ViewBag.ExerciseNameId"></select>
            </div>

            <div class="form-group mb-3">
                <label asp-for="TrainingSessionId" class="control-label"></label>
                <select asp-for="TrainingSessionId" class="form-control" asp-items="ViewBag.TrainingSessionId"></select>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Weight" class="control-label"></label>
                <input asp-for="Weight" class="form-control" />
                <span asp-validation-for="Weight" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Sets" class="control-label"></label>
                <input asp-for="Sets" class="form-control" />
                <span asp-validation-for="Sets" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="RepsPerSet" class="control-label"></label>
                <input asp-for="RepsPerSet" class="form-control" />
                <span asp-validation-for="RepsPerSet" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">Zapisz</button>
            <a asp-action="Index" class="btn btn-secondary">Powrót</a>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
